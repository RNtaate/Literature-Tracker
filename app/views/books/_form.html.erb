<%= form_with(model: book, local: true, class: 'dark-color') do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: 'true', placeholder: 'Name'%>
  </div>

  <div class="field">
    <%= f.text_field :book_author, autocomplete: 'true', placeholder: 'Book_Author'%>
  </div>

  <div class="field">
    <%= f.number_field :amount, max: 9999, autocomplete: 'true', placeholder: 'Book Cost'%>
  </div>

  <div class="field">
    <%= f.number_field :time, max: 9999, autocomplete: 'true', placeholder: 'Time in hours'%>
  </div>
  <br>
  <h4 class='group-heading'>Groups: </h4>
  <%= collection_check_boxes(:book, :group_ids, Group.all, :id, :name) do |g| %>
  <%= g.label {g.check_box + g.text} %><br>
  <% end %>

  <div class="actions btn new-item">
    <%= f.submit class: 'inner-btn' %>
  </div>
<% end %>
