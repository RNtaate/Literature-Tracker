<section class="list-section">

  <nav class='nav-bar'>
    <%= link_to community_path do%>
      <h5><i class="fa fa-arrow-left" aria-hidden="true"></i></h5>
    <% end %>
    <h5>Profile</h5>
  </nav>
  <h2 class= 'group-heading'><%= @user.name %></h2>
  <h5 class= 'group-heading'>Books Read : </h5>

  <% @user.books.each do |book|%>

    <div class="list-item">
      <div class="list-item-details group-name-date">
          <p>'<%= book.name %>'</p>
          <small>Author: <span><%= book.book_author %></span></small>
        </div>
      </div>
    </div>
    
  <% end %>

</section>