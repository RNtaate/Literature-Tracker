<section class="profile-section">
  <div class="profile-div">
    <% if @user.image.attached?%>
      <div class='profile-div-image' style="background-image: url(<%= rails_blob_url(@user.image)%>)">
      </div>
    <% else %>
      <div class="profile-div-image" style="background-image: url(/assets/blank_profile.jpg)">
      </div>      
    <% end%>
    <h3><%= @user.name %></h3>
  </div>

  <div class= 'list'>

    <div>
      <p><%= link_to 'All my books', books_path%><p>
    </div>

    <div>
      <p><%= link_to 'All my external books', ungrouped_path%><p>
    </div>

    <div>
      <p><%= link_to 'All groups', groups_path%><p>
    </div>    

    <div>
      <p><%= link_to 'Account settings', edit_user_registration_path%><p>
    </div>

    <div>
      <p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure you want to sign?'}%></p>
    </div>
    
  </div>
</section>