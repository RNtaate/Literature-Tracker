<section class="profile-section">
  <div class="profile-div">
    <div class='profile-div-image' style="background-image: url(<%= rails_blob_url(@user.image)%>)">
    </div>
    <h3><%= @user.name %></h3>
  </div>

  <div class= 'list'>

    <div>
      <p><%= link_to 'All my books', books_path%><p>
    </div>

    <div>
      <p>All my external books<p>
    </div>

    <div>
      <p><%= link_to 'All my groups', groups_path%><p>
    </div>    

    <div>
      <p><%= link_to 'Account settings', edit_user_registration_path%><p>
    </div>

    <div>
      <p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure you want to sign?'}%></p>
    </div>
    
  </div>
</section>