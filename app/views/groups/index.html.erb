<p id="notice"><%= notice %></p>

<section class="list-section">
  <nav class='nav-bar'>
      <%= link_to user_path(current_user) do%>
        <h5><i class="fa fa-arrow-left" aria-hidden="true"></i></h5>
      <% end %>
      <h5>GROUPS</h5>
  </nav>

    <% @groups.each do |group|%>
      <%= link_to group_path(group) do %>
        <div class="list-item">

          <% if group.image.attached? %>
            <div class="image-div" style="background-image: url(<%= rails_blob_url(group.image)%>)">
            </div>
          <% else %>
            <div class="image-div" style="background-image: url(/assets/group2.png)">
            </div>             
          <% end %>

          <div class="list-item-details name-date">
            <p><%= group.name %></p>
            <small><%= group.created_at.strftime("%B %d, %Y") %></small>
          </div>

          <div class="list-item-details meta-details">
            <h4>$<%= group.books.where(author_id: current_user.id).sum('amount') %></h4>
            <h4><%=group.books.where(author_id: current_user.id).sum('time')%> hrs</h4>
          </div>
        </div>

        </div>
      <% end %>
    <% end %>
    <br>
</section>

<div class='btn new-item'>
  <div class='inner-btn'>
    <b><%= link_to 'NEW GROUP', new_group_path %></b>
  </div>
</div>